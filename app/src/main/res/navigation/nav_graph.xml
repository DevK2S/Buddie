<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/navigation"
	app:startDestination="@id/getStarted">
	
	<fragment
		android:id="@+id/getStarted"
		android:name="com.buddie.presentation.fragments.GetStartedFragment"
		android:label="get_started_page"
		tools:layout="@layout/fragment_get_started">
		<action
			android:id="@+id/action_getStarted_to_enterNumber"
			app:destination="@id/phoneAuth" />
	</fragment>
	
	<fragment
		android:id="@+id/phoneAuth"
		android:name="com.buddie.presentation.fragments.PhoneAuthFragment"
		android:label="number_enter"
		tools:layout="@layout/fragment_phone_auth">
		
		<action
			android:id="@+id/action_phoneAuth_to_createProfileFragment"
			app:destination="@id/createProfileFragment" />
	</fragment>
	
	<fragment
		android:id="@+id/createProfileFragment"
		android:name="com.buddie.presentation.fragments.CreateProfileFragment"
		android:label="fragment_create_profile"
		tools:layout="@layout/fragment_create_profile" />
	
	<activity
		android:id="@+id/hilt_MainActivity"
		android:name="com.buddie.presentation.activities.Hilt_MainActivity"
		android:label="Hilt_MainActivity" />

</navigation>
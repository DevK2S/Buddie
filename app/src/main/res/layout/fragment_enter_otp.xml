<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/black_russian"
		android:gravity="center"
		android:orientation="vertical"
		tools:context=".presentation.fragments.EnterOtpFragment">
		
		<TextView
			android:id="@+id/tv_title"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginTop="20dp"
			android:text="@string/otp"
			android:textAlignment="center"
			android:textColor="@color/silver_sand"
			android:textSize="30sp"
			android:textStyle="bold"
			app:layout_constraintTop_toTopOf="parent" />
		
		<TextView
			android:id="@+id/tv_subtitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="32dp"
			android:text="@string/enter_code"
			android:textAlignment="center"
			android:textColor="@color/silver_sand"
			android:textSize="20sp"
			app:layout_constraintTop_toBottomOf="@id/tv_title" />
		
		<TextView
			android:id="@+id/tv_number"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginTop="8dp"
			android:textAlignment="center"
			android:textColor="@color/razzmatazz"
			android:textSize="20sp"
			app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
			tools:text="+91 98044 70987" />
		
		<LinearLayout
			android:id="@+id/ll_code"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center"
			android:orientation="horizontal"
			android:paddingVertical="4dp"
			app:layout_constraintTop_toBottomOf="@id/tv_number">
			
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/til_code1"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="5dp"
				android:focusableInTouchMode="false"
				app:boxStrokeWidth="15dp">
				
				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/et_code1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rounded_corners_with_stroke"
					android:inputType="number"
					android:maxLength="1"
					android:textAlignment="center"
					android:textColor="@color/silver_sand"
					android:textSize="24sp"
					tools:text="1" />
			
			</com.google.android.material.textfield.TextInputLayout>
			
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/til_code2"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="5dp"
				android:focusableInTouchMode="false"
				app:boxStrokeWidth="15dp">
				
				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/et_code2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rounded_corners_with_stroke"
					android:inputType="number"
					android:maxLength="1"
					android:textAlignment="center"
					android:textColor="@color/silver_sand"
					android:textSize="24sp"
					tools:text="1" />
			
			</com.google.android.material.textfield.TextInputLayout>
			
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/til_code3"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="5dp"
				android:focusableInTouchMode="false"
				app:boxStrokeWidth="15dp">
				
				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/et_code3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rounded_corners_with_stroke"
					android:inputType="number"
					android:maxLength="1"
					android:textAlignment="center"
					android:textColor="@color/silver_sand"
					android:textSize="24sp"
					tools:text="1" />
			
			</com.google.android.material.textfield.TextInputLayout>
			
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/til_code4"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="5dp"
				android:focusableInTouchMode="false"
				app:boxStrokeWidth="15dp">
				
				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/et_code4"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rounded_corners_with_stroke"
					android:inputType="number"
					android:maxLength="1"
					android:textAlignment="center"
					android:textColor="@color/silver_sand"
					android:textSize="24sp"
					tools:text="1" />
			
			</com.google.android.material.textfield.TextInputLayout>
			
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/til_code5"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="5dp"
				android:focusableInTouchMode="false"
				app:boxStrokeWidth="15dp">
				
				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/et_code5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rounded_corners_with_stroke"
					android:inputType="number"
					android:maxLength="1"
					android:textAlignment="center"
					android:textColor="@color/silver_sand"
					android:textSize="24sp"
					tools:text="1" />
			
			</com.google.android.material.textfield.TextInputLayout>
			
			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/til_code6"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="5dp"
				android:focusableInTouchMode="false"
				app:boxStrokeWidth="15dp">
				
				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/et_code6"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rounded_corners_with_stroke"
					android:inputType="number"
					android:maxLength="1"
					android:textAlignment="center"
					android:textColor="@color/silver_sand"
					android:textSize="24sp"
					tools:text="1" />
			
			</com.google.android.material.textfield.TextInputLayout>
		</LinearLayout>
		
		<TextView
			android:id="@+id/tv_resend_code"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginTop="20dp"
			android:paddingVertical="4dp"
			android:text="@string/resend_code"
			android:textAlignment="center"
			android:textColor="@color/silver_sand"
			android:textSize="16sp"
			app:layout_constraintTop_toBottomOf="@id/ll_code" />
		
		<Button
			android:id="@+id/btn_submit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginHorizontal="75dp"
			android:layout_marginTop="16dp"
			android:background="@drawable/btn_rounded"
			android:backgroundTint="@color/black_rock"
			android:paddingVertical="8dp"
			android:text="@string/submit"
			android:textColor="@color/white"
			android:textSize="20sp"
			app:layout_constraintTop_toBottomOf="@id/tv_resend_code" />
		
		<com.davidmiguel.numberkeyboard.NumberKeyboard
			android:id="@+id/number_keyboard"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginTop="16dp"
			android:padding="16dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toBottomOf="@id/btn_submit"
			app:numberkeyboard_keyboardType="integer"
			app:numberkeyboard_numberKeyBackground="@drawable/key_background"
			app:numberkeyboard_numberKeyTextColor="@color/white"
			app:numberkeyboard_rightAuxBtnBackground="@drawable/key_background"
			app:numberkeyboard_rightAuxBtnIcon="@drawable/ic_backspace" />
	
	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
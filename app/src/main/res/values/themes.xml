<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Buddie" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/razzmatazz</item>
        <item name="colorPrimaryVariant">@color/jazz_berry_jam</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black_russian</item>
        <item name="colorSecondaryVariant">@color/black_rock</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_russian</item>
    </style>
    
    <style name="TransparentLoadingBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>